<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_launches"
    app:cardCornerRadius="10sp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- Launch Sequence Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/launch_sequence"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>

        <!-- Launch Vehicle Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/launch_vehicle"
            android:textSize="15sp"
            android:layout_toEndOf="@id/launch_sequence"
            android:layout_marginStart="20sp"/>

        <!-- Mission Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mission_name"
            android:textSize="20sp"
            android:layout_below="@id/launch_vehicle"
            android:layout_toEndOf="@id/launch_sequence"
            android:layout_marginStart="20sp"/>

        <!-- More Information Arrow Button -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_btn"
            android:contentDescription="More information button"
            android:background="#FFFFFF"
            android:id="@+id/more_info_btn"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>