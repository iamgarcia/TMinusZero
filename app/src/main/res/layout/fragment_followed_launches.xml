<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:text="Followed Launches"-->
        <!--android:textSize="36sp"/>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <!-- Launch Sequence Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/launch_sequence"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>

            <!-- Launch Service Provider Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/launch_service_provider"
                android:layout_toRightOf="@+id/launch_sequence"
                android:layout_marginLeft="20sp"
                android:textSize="15sp"/>

            <!-- Launch Service Provider Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_toRightOf="@+id/launch_service_provider"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textSize="15sp"/>

            <!-- Launch Vehicle Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/launch_vehicle"
                android:layout_toRightOf="@+id/launch_service_provider"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"/>

            <!-- Mission Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_name"
                android:layout_below="@id/launch_service_provider"
                android:layout_toRightOf="@+id/launch_sequence"
                android:layout_marginLeft="20sp"
                android:textSize="20sp"/>

            <!-- Mission Text-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_btn"
                android:background="#FFFFFF"
                android:id="@+id/more_info_btn"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>